{
    "manifest_version": 2,
    "name": "Sho tabs info",
    "version": "1.0",
    // ここまで必須
    "browser_action": {
        "default_icon": {
            "16": "icon.png"  // 16x16のアイコン
        },
        "default_popup": "popup.html"
    },

    // タブにアクセスするためにはパーミッションが必要
    "permissions": [
        "tabs"
    ]
}